  .rewards-intro {
    max-width: 800px;
    margin-bottom: 2.5rem;
    position: relative;
    z-index: 1;
  }
  
  .rewards-intro p {
    font-size: 1.1rem;
    color: var(--text-secondary);
  }
  
  .rewards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }
  
  .reward-card {
    height: 100%;
  }
  
  .reward-card.highlight {
    background: linear-gradient(145deg, rgba(0, 85, 255, 0.1), var(--dark-surface));
    border-left: 4px solid var(--primary);
  }
  
  .reward-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.2rem;
  }
  
  .reward-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background: rgba(0, 85, 255, 0.1);
    color: var(--primary);
  }
  
  .reward-header h3 {
    font-size: 1.2rem;
    margin: 0;
    color: var(--text-accent);
  }
  
  .reward-body p {
    color: var(--text-secondary);
    margin-bottom: 1.2rem;
    font-size: 0.95rem;
  }
  
  .reward-details {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
  }
  
  .reward-detail {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }
  
  .reward-detail:last-child {
    margin-bottom: 0;
  }
  
  .detail-label {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  
  .detail-value {
    color: var(--primary);
    font-weight: 600;
  }
  
  .detail-note {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-style: italic;
    text-align: right;
  }
  
  .reward-list {
    list-style: none;
    margin: 0 0 1.2rem 0;
    padding: 0;
  }
  
  .reward-list li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.8rem;
    color: var(--text-secondary);
  }
  
  .reward-list li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--primary);
  }
  
  .reward-chart {
    margin: 1.5rem 0;
  }
  
  .chart-bars {
    display: flex;
    justify-content: space-around;
    height: 150px;
    align-items: flex-end;
    margin-bottom: 1rem;
  }
  
  .chart-bar {
    width: 60px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px 8px 0 0;
    position: relative;
    transition: var(--transition-normal);
  }
  
  .chart-bar:hover {
    transform: translateY(-5px);
  }
  
  .chart-bar.accent {
    background: linear-gradient(to top, var(--primary), var(--secondary));
  }
  
  .chart-bar.secondary {
    background: rgba(0, 178, 255, 0.2);
  }
  
  .bar-label {
    position: absolute;
    bottom: -25px;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  
  .chart-label {
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-top: 1.5rem;
  }
  
  .marketing-benefits {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.8rem;
    margin: 1.2rem 0;
  }
  
  .marketing-benefit {
    text-align: center;
  }
  
  .benefit-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 91, 172, 0.1);
    color: var(--pink);
    font-size: 1.2rem;
    margin: 0 auto 0.5rem;
  }
  
  .benefit-text {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  
  .reward-table-container {
    background: var(--dark-surface);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }
  
  .table-wrapper {
    overflow-x: auto;
  }
  
  .cta-box {
    padding: 2rem;
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
    overflow: hidden;
    background: linear-gradient(145deg, var(--dark-surface), rgba(0, 85, 255, 0.1));
  }
  
  .cta-content h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }
  
  .cta-content p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .cta-graphic {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .cta-blob {
    width: 100%;
    max-width: 300px;
  }
  
  @media (max-width: 768px) {
    .rewards-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-box {
      grid-template-columns: 1fr;
    }
    
    .marketing-benefits {
      grid-template-columns: 1fr;
    }
    
    .reward-table-container {
      padding: 1.5rem;
    }
  }
</style>
