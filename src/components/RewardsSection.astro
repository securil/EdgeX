          </defs>
          
          <!-- Token Icons -->
          <g>
            <circle cx="80" cy="70" r="15" fill="#0055FF" opacity="0.8" />
            <text x="80" y="75" font-size="14" fill="white" text-anchor="middle">$</text>
          </g>
          <g>
            <circle cx="130" cy="100" r="12" fill="#00AAFF" opacity="0.8" />
            <text x="130" y="105" font-size="12" fill="white" text-anchor="middle">$</text>
          </g>
          <g>
            <circle cx="100" cy="140" r="10" fill="#FF5BAC" opacity="0.8" />
            <text x="100" y="144" font-size="10" fill="white" text-anchor="middle">$</text>
          </g>
